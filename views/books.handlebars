{{#section 'head'}}
  <script src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js"></script>

  <script id="booksTemplate" type="text/x-handlebars-template">
      \{{#each books}}
          <div class="row">
            <div class="col-lg-12">
              <h1>\{{title}}</h1>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-2">
              <img src="\{{imgLink}}"/>
            </div>
            <div class="col-lg-10">
              <div><span><b>Author:</b></span>\{{author}}</div>
              <div><span><b>Description:</b></span>\{{description}}</div>
              <button type="button" class="btn btn-outline-secondary btn-sm">click</button>
            </div>
          </div>
      \{{/each}}
  </script>
  <script src="/js/books.js"></script>
{{/section}}

<div id="books">
  <div class="row">
    <div class="col-lg-12 loader">
      <img src="/img/loading.gif" alt="loader">
    </div>
  </div>
</div>
